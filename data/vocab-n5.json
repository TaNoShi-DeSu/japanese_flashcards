<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>JLPT N5 èªå½™å­¸ç¿’</title>
  <style>
    body {
      font-family: 'Hiragino Kaku Gothic ProN', 'Noto Sans JP', sans-serif;
      background-color: #f8f5f0;
      color: #333;
      margin: 0;
      padding: 2rem;
    }
    .container {
      max-width: 800px;
      margin: auto;
      background-color: #fffaf4;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      padding: 2rem;
    }
    h1 {
      color: #6d4c41;
      text-align: center;
      margin-bottom: 1rem;
    }
    .vocab-card {
      border-bottom: 1px solid #e0dcd5;
      padding: 1rem 0;
    }
    .vocab-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .kana, .kanji {
      font-size: 1.5rem;
      font-weight: bold;
    }
    .meaning {
      font-size: 1.2rem;
      color: #5d4037;
    }
    .example {
      margin-top: 0.5rem;
    }
    .audio-buttons button {
      margin-right: 1rem;
    }
    .progress-bar {
      height: 12px;
      background-color: #f0e4d7;
      border-radius: 8px;
      overflow: hidden;
      margin-top: 2rem;
    }
    .progress {
      height: 100%;
      background-color: #d2b48c;
      width: 0;
      transition: width 0.3s;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>JLPT N5 èªå½™å­¸ç¿’</h1>
    <div id="vocab-list"></div>
    <div class="progress-bar"><div id="progress" class="progress"></div></div>
  </div>

  <script>
    async function loadVocabulary() {
      const res = await fetch('data/vocab-n5.json');
      const vocabData = await res.json();
      const list = document.getElementById('vocab-list');
      const progress = document.getElementById('progress');

      vocabData.forEach((item, index) => {
        const div = document.createElement('div');
        div.className = 'vocab-card';

        div.innerHTML = `
          <div class="vocab-header">
            <div>
              <div class="kanji">${item.kanji}</div>
              <div class="kana">${item.kana} (${item.romaji})</div>
            </div>
            <div class="meaning">${item.meaning_zh}</div>
          </div>
          <div class="example">
            <p>ğŸ“˜ ${item.example_jp}</p>
            <p>ğŸ“™ ${item.example_zh}</p>
            <div class="audio-buttons">
              <button onclick="playAudio('${item.audio_vocab}')">ğŸ”Š å–®å­—</button>
              <button onclick="playAudio('${item.audio_example}')">ğŸ”Š ä¾‹å¥</button>
            </div>
          </div>
        `;

        list.appendChild(div);
      });

      // Progress bar logic
      progress.style.width = (vocabData.length / 100 * 10) + '%'; // 10 out of 100 (N5 åŸºç¤)
    }

    function playAudio(src) {
      const audio = new Audio(src);
      audio.play();
    }

    loadVocabulary();
  </script>
</body>
</html>
